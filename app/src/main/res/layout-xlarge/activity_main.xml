<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="evgeniy.kurinnoy.calc.MainActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.70"
        android:background="@color/colorAccent"
        android:padding="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/deleteAll_button"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="deleteAllButtonListener"
                android:padding="0dp"
                android:text="C"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="249dp" />

            <ImageButton
                android:id="@+id/delete_button"
                style="@style/styleImageButton"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:elevation="0dp"
                android:onClick="deleteButtonListener"
                android:padding="0dp"
                app:srcCompat="@drawable/clear_icon"
                tools:layout_editor_absoluteX="95dp"
                tools:layout_editor_absoluteY="249dp" />

            <Button
                android:id="@+id/oBracket"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="openBracketListener"
                android:padding="0dp"
                android:text="("
                android:textSize="34sp" />

            <Button
                android:id="@+id/cBracket"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="closeBracketListener"
                android:padding="0dp"
                android:text=")"
                android:textSize="34sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="7"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="203dp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="8"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="203dp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="9"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="203dp" />

            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="operationButtonListener"
                android:padding="0dp"
                android:text="*"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="183dp"
                tools:layout_editor_absoluteY="249dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="0dp"
            android:padding="0dp">

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="4"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="271dp" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="5"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="269dp" />

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="6"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="269dp" />

            <Button
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="operationButtonListener"
                android:padding="0dp"
                android:text="/"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="276dp"
                tools:layout_editor_absoluteY="249dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="1"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="344dp" />

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="2"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="94dp"
                tools:layout_editor_absoluteY="344dp" />

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="3"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="157dp"
                tools:layout_editor_absoluteY="344dp" />

            <Button
                android:id="@+id/minus"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="minusButtonListener"
                android:padding="0dp"
                android:text="-"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="276dp"
                tools:layout_editor_absoluteY="319dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="0dp">

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="numberButtonListener"
                android:padding="0dp"
                android:text="0"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="405dp" />

            <Button
                android:id="@+id/point"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="pointButtonListener"
                android:padding="0dp"
                android:text="."
                android:textSize="34sp" />

            <Button
                android:id="@+id/log"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="operationButtonListener"
                android:padding="0dp"
                android:text="log"
                android:textSize="34sp"
                tools:layout_constraintBaseline_creator="1"
                tools:layout_constraintLeft_creator="1"
                tools:layout_editor_absoluteX="6dp"
                tools:layout_editor_absoluteY="155dp" />

            <Button
                android:id="@+id/plus"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:onClick="operationButtonListener"
                android:padding="0dp"
                android:text="+"
                android:textSize="34sp"
                tools:layout_editor_absoluteX="276dp"
                tools:layout_editor_absoluteY="389dp" />

        </TableRow>
    </TableLayout>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:paddingBottom="0dp"
        android:paddingTop="0dp"
        android:text="@string/logFormat"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/debugText"
        android:layout_width="200dp"
        android:layout_height="43dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        android:padding="0dp"
        android:paddingTop="5dp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/debugText"
        app:layout_constraintVertical_bias="0.04000002"
        android:layout_marginEnd="8dp">

        <TextView
            android:id="@+id/mainText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:ellipsize="start"
            android:scrollHorizontally="false"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="56sp"
            app:layout_constraintLeft_toLeftOf="parent"
            tools:layout_editor_absoluteY="28dp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="20dp"
            android:elevation="1dp"
            android:ellipsize="middle"
            android:singleLine="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="46sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            tools:layout_editor_absoluteY="125dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:onClick="prefButtonAction"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        tools:layout_editor_absoluteX="349dp" />
</android.support.constraint.ConstraintLayout>
